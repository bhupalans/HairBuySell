
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Rule for product images:
    // - Path matches the structure: products/{userId}/{allPaths=**}
    // - Allows read access to anyone (for public viewing of products).
    // - Allows write access (create, update, delete) only if the requesting user's UID
    //   matches the {userId} in the path. This ensures vendors can only manage their own images.
    match /products/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
