
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Function to check if the user is an admin by looking up their UID in Firestore
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Rules for product images
    // Allow read by anyone.
    // Allow write (create, update, delete) if the user is the owner OR is an admin.
    match /products/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Rules for user avatars
    // Allow read by anyone.
    // Allow write (create, update, delete) if the user is the owner OR is an admin.
    match /avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
  }
}
